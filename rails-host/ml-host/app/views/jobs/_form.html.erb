<%= form_with model: @job, class: "nifty_form" do |f|%>

  <% if job.image.attached? %>
    <%= image_tag job.image, style: "width: 200px; display: block" %>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.submit "Create"%>

<% end %>

